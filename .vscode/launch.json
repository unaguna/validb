  "version": "0.2.0",
  "configurations": [
    {
      "name": "Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-v"],
      "cwd": "${workspaceFolder}/py"
    },
    {
      "name": "Pytest - minimum",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-v", "--independent"],
      "cwd": "${workspaceFolder}/py"
    },
    {
      "name": "Run Module validb",
      "type": "debugpy",
      "request": "launch",
      "module": "validb",
      "args": [
        "-c",
        "${workspaceFolder}/py/src/validb-use/validb_host.yml",
        "-D",
        "${workspaceFolder}/env/detected.csv"
      ],
      "cwd": "${workspaceFolder}/py/src",
      "env": {
        "PYTHONPATH": "${workspaceRoot}/py/src/validb-use/pythonpath;${workspaceRoot}/py/src;${env:PYTHONPATH}"
      }
    },
    {
      "name": "Run example.py",
      "type": "debugpy",
      "request": "launch",
      "program": "validb-use/example.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/py/src"
    },
    {
      "name": "Run example2.py",
      "type": "debugpy",
      "request": "launch",
      "program": "validb-use/example2.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/py/src"
    }
  ]
}
